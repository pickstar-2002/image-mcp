    "sharp", 
    "jimp", 
    "webp", 
    "avif", 
    "png", 
    "jpg", 
    "gif", 
    "svg", 
    "ico",
    "model-context-protocol"
  ],
  "author": "CodeBuddy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/image-converter-mcp.git"
  },
  "homepage": "https://github.com/your-username/image-converter-mcp#readme",
  "bugs": {
    "url": "https://github.com/your-username/image-converter-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "sharp": "^0.33.0",
    "jimp": "^0.22.0",
    "zod": "^3.22.0"
